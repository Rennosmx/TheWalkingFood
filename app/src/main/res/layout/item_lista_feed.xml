<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="100dp">

    <RelativeLayout
        android:background="#ffe26f"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/item_lista_feed_ImageView"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="20dp"
            />

        <TextView
            android:id="@+id/item_lista_feed_feedTextView"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginRight="20dp"

            android:layout_toRightOf="@+id/item_lista_feed_ImageView"
            android:layout_marginTop="50dp"
            android:layout_centerVertical="true"
            android:textColor="#484848"
            />

        <TextView
            android:id="@+id/item_lista_feed_dateTextView"
            android:layout_width="90dp"
            android:layout_height="wrap_content"

            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:textColor="#a7425c"
            />


    </RelativeLayout>



</LinearLayout>