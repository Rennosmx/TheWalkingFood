<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_cadastro_consumidor"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/selecaoperfilcadastropng"
    tools:context="imd.ufrn.br.thewalkingfood.CadastroConsumidorActivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:textSize="20sp"
        android:id="@+id/etNomeConsumidor"
        android:hint="@string/digite_seu_nome"
        android:textColorHint="#A7425C"
        android:textColor="#484848"
        android:layout_below="@+id/tvNomeConsumidor"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:textSize="20sp"
        android:layout_below="@+id/tvTelefoneConsumidor"
        android:layout_alignRight="@+id/etNomeConsumidor"
        android:layout_alignEnd="@+id/etNomeConsumidor"
        android:id="@+id/etTelefoneConsumidor"
        android:hint="@string/digite_seu_n_mero"
        android:textColorHint="#A7425C"
        android:textColor="#484848" />

    <TextView
        android:text="@string/nome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvNomeConsumidor"
        android:textColor="#484848"
        android:textSize="30sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="@string/telefone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvTelefoneConsumidor"
        android:textColor="#484848"
        android:textSize="30sp"
        android:layout_below="@+id/etNomeConsumidor"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
