<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_cadastro_ambulante"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/planodefundo_padrao"
    tools:context="imd.ufrn.br.thewalkingfood.CadastroVendedorActivity">

    <TextView
        android:text="Telefone:"
        android:textColor="#A7425C"
        android:textSize="22sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="54dp"
        android:id="@+id/tvTelefoneVendedor"
        android:layout_alignTop="@+id/tvNomeVendedor"
        android:layout_alignLeft="@+id/tvNomeVendedor"
        android:layout_alignStart="@+id/tvNomeVendedor"
        android:layout_below="@id/tvNomeVendedor"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Digite seu nome"
        android:textColorHint="#484848"
        android:textColor="#484848"
        android:backgroundTint="#A7425C"
        android:ems="10"
        android:id="@+id/fbNomeVendedor"
        android:layout_alignBaseline="@+id/tvNomeVendedor"
        android:layout_alignBottom="@+id/tvNomeVendedor"
        android:layout_toRightOf="@+id/tvTelefoneVendedor"
        android:layout_toEndOf="@+id/tvTelefoneVendedor"
        android:layout_marginLeft="18dp"
        android:layout_marginStart="18dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:hint="Digite seu nÃºmero"
        android:textColorHint="#484848"
        android:textColor="#484848"
        android:ems="10"
        android:id="@+id/fbNumeroVendedor"
        android:layout_alignBaseline="@+id/tvTelefoneVendedor"
        android:layout_alignBottom="@+id/tvTelefoneVendedor"
        android:layout_alignLeft="@+id/fbNomeVendedor"
        android:layout_alignStart="@+id/fbNomeVendedor" />


    <com.facebook.login.widget.ProfilePictureView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/fbNomeVendedor"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="34dp"
        android:id="@+id/fbImg" />

    <LinearLayout
        android:id="@+id/cadastro_vendedor_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"

        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="52dp">

        <Button
            android:layout_weight="1"
            android:text="Finalizar Cadastro"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/finalizarCadastroAmbulante"
            android:onClick="finalizarCadastro"
            android:backgroundTint="#a7425c"
            android:background="@drawable/screen_border"

            android:layout_marginRight="10dp"
            />

        <Button
            android:layout_weight="1"
            android:text="Adicionar Produtos"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnAdicionarProduto"
            android:onClick="adicionarProduto"
            android:backgroundTint="#a7425c"
            android:background="@drawable/screen_border"
            android:elevation="0dp"
            android:layout_marginLeft="10dp"

             />

    </LinearLayout>

    <TextView
        android:text="Nome:"
        android:textSize="22sp"
        android:textColor="#A7425C"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="184dp"
        android:layout_marginRight="13dp"
        android:layout_marginEnd="13dp"
        android:id="@+id/tvNomeVendedor"
        android:layout_above="@+id/cadastro_vendedor_buttons"
        android:layout_toLeftOf="@+id/fbImg"
        android:layout_toStartOf="@+id/fbImg" />

</RelativeLayout>
