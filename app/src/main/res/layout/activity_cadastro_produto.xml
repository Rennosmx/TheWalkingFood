<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_cadastro_produto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/planodefundo_padrao"
    tools:context="imd.ufrn.br.thewalkingfood.CadastroProdutoActivity">

    <Button
        android:text="Cadastrar Produto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btAdicionarProduto"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:onClick="cadastrarProduto"
        android:backgroundTint="#a7425c"
        android:background="@drawable/screen_border"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="150dip"
        android:inputType="textMultiLine|textPersonName"
        android:textColor="#484848"
        android:textSize="20sp"
        android:textColorHint="#A7425C"
        android:gravity="center"
        android:id="@+id/etIngrediente"
        android:hint=" Descrição de Ingredientes"
        android:layout_below="@+id/imgProduto"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="150dip"
        android:layout_height="150dip"
        android:background="@drawable/produto"
        android:id="@+id/imgProduto"
        android:layout_marginTop="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:id="@+id/etPrecoProduto"
        android:hint="Preço"
        android:gravity="center"
        android:textColorHint="#A7425C"
        android:textColor="#484848"
        android:inputType="numberDecimal"
        android:layout_above="@+id/etIngrediente"
        android:layout_toRightOf="@+id/imgProduto"
        android:layout_toEndOf="@+id/imgProduto" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:textSize="20sp"
        android:gravity="center"
        android:id="@+id/etNomeProduto"
        android:hint="Nome"
        android:textColorHint="#A7425C"
        android:textColor="#484848"
        android:layout_above="@+id/etPrecoProduto"
        android:layout_toRightOf="@+id/imgProduto"
        android:layout_toEndOf="@+id/imgProduto" />

</RelativeLayout>
