<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_vendedor_add_produto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#ffe26f"
    tools:context="imd.ufrn.br.thewalkingfood.Vendedor.VendedorAddProdutoActivity">

    <ProgressBar
        android:id="@+id/vendedor_add_produto_ProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        />

    <ImageView
        android:id="@+id/vendedor_add_produto_ImageView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="60dp"
        android:src="@drawable/icon_food"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/vendedor_add_produto_ImageView"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        >


        <LinearLayout
            android:id="@+id/vendedor_add_produto_NameBoxes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Nome:"
                android:layout_marginTop="5dp"
                android:textSize="18sp"
                android:textColor="#A7425C"
                />

            <RelativeLayout
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="#ffe26f"
                >

                <EditText
                    android:id="@+id/vendedor_add_produto_EditText_Nome"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"

                    android:textColor="#484848"
                    android:background="#ffe26f"
                    android:textSize="20sp"
                    />

                <LinearLayout
                    android:layout_below="@+id/vendedor_add_produto_EditText_Nome"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#A7425C"></LinearLayout>


            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/vendedor_add_produto_PrecoBoxes"
            android:layout_below="@+id/vendedor_add_produto_NameBoxes"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Preço:"
                android:layout_marginTop="5dp"
                android:textSize="18sp"
                android:textColor="#A7425C"
                />

            <RelativeLayout
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="#ffe26f"
                >

                <EditText
                    android:id="@+id/vendedor_add_produto_EditText_Preco"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"

                    android:textColor="#484848"
                    android:background="#ffe26f"
                    android:textSize="20sp"
                    android:inputType="numberDecimal" />

                <LinearLayout
                    android:layout_below="@+id/vendedor_add_produto_EditText_Preco"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#A7425C"></LinearLayout>

            </RelativeLayout>



        </LinearLayout>

        <LinearLayout
            android:id="@+id/vendedor_add_produto_categoriaBoxes"
            android:layout_below="@+id/vendedor_add_produto_PrecoBoxes"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Categoria:"
                android:layout_marginTop="5dp"
                android:textSize="18sp"
                android:textColor="#A7425C"
                />

            <RelativeLayout
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="#ffe26f"
                >

                <EditText
                    android:id="@+id/vendedor_add_produto_EditText_Categoria"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"

                    android:textColor="#484848"
                    android:background="#ffe26f"
                    android:textSize="20sp"
                     />

                <LinearLayout
                    android:layout_below="@+id/vendedor_add_produto_EditText_Categoria"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#A7425C"></LinearLayout>

            </RelativeLayout>



        </LinearLayout>

        <LinearLayout
            android:layout_below="@+id/vendedor_add_produto_categoriaBoxes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="15dp"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Descrição: "
                android:textSize="18sp"
                android:textColor="#A7425C"
                />

            <EditText
                android:id="@+id/vendedor_add_produto_descricaoEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textSize="15sp"
                android:textColor="#484848"
                android:backgroundTint="#A7485C"
                android:maxLength="100"
                />


        </LinearLayout>

    </RelativeLayout>



    <Button
        android:text="Cadastrar"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/vendedor_add_produto_Button"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#A7425C"
        android:background="@drawable/screen_border"
        />

    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/vendedor_add_produto_editPhotoButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        fancy:fb_iconResource="@drawable/editar_tela_amarela"
        fancy:fb_defaultColor="#ffffff"
        fancy:fb_iconPaddingLeft="0dp"
        fancy:fb_iconPaddingRight="0dp"
        fancy:fb_focusColor="#313131"
        fancy:fb_fontIconSize="50sp"
        fancy:fb_radius="40dp"
        android:layout_alignRight="@+id/vendedor_add_produto_ImageView"
        android:layout_alignBottom="@+id/vendedor_add_produto_ImageView"

        android:layout_marginBottom="10dp"

        />


</RelativeLayout>
