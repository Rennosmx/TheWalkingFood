<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="#ffe26f"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/produto_round_corner"
        android:layout_margin="5dp"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/item_lista_produtos_imageView"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:layout_alignParentLeft="true"
            />

        <TextView

            android:id="@+id/item_lista_produtos_tituloTextView"
            android:layout_width="200dp"
            android:layout_marginTop="20dp"
            android:textSize="10sp"

            android:textColor="#ffffff"
            android:layout_height="15dp"
            android:layout_toRightOf="@+id/item_lista_produtos_imageView"
            />

        <TextView
            android:id="@+id/item_lista_produtos_categoriaTextView"
            android:layout_width="200dp"
            android:layout_height="15dp"
            android:textSize="10sp"

            android:textColor="#ffffff"
            android:layout_toRightOf="@+id/item_lista_produtos_imageView"
            android:layout_below="@+id/item_lista_produtos_tituloTextView"
            />

        <TextView
            android:id="@+id/item_lista_produtos_descricaoTextView"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:textSize="10sp"

            android:textColor="#ffffff"
            android:layout_toRightOf="@+id/item_lista_produtos_imageView"
            android:layout_below="@+id/item_lista_produtos_categoriaTextView"
            />

        <TextView
            android:id="@+id/item_lista_produtos_precoTextView"
            android:layout_width="80dp"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="50dp"
            android:layout_marginTop="3dp"
            android:textSize="10sp"
            android:textColor="#ffffff"

            android:gravity="right"
            />




    </RelativeLayout>



</LinearLayout>